<UserControl x:Class="AwbStudio.AwbClientsControls.AwbClientControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AwbStudio.AwbClientsControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="2" Margin="0 0 0 5" Background="#FF333333"  >
        <StackPanel>
            <Label x:Name="LabelTitle" Content="LabelTitle" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBlock x:Name="TextBlockDebugLog" TextWrapping="Wrap" Text="TextBlock" Height="100"/>
            <Button HorizontalAlignment="Right" x:Name="ButtonDisconnect" Margin="5" Content="Disconnect" />
            
        </StackPanel>
    </Border>
</UserControl>
