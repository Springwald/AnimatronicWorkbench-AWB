<UserControl x:Class="AwbStudio.HelpAndSupport.HelpButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AwbStudio.HelpAndSupport"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100"  >
    <Button Width="Auto"  Height="Auto" Click="Button_Click" Margin="5" Padding="2" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
        <Border Background="#FF2A004E" CornerRadius="3" BorderBrush="Black">
            <Label FontStyle="Italic"  >
                ⁉️ Show help
            </Label>
        </Border>

    </Button>

</UserControl>
