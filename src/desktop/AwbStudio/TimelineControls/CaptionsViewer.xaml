<UserControl x:Class="AwbStudio.TimelineControls.CaptionsViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AwbStudio.TimelineControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <WrapPanel x:Name="LineNames" Margin="0">
        <Border x:Name="PrototypeLabelBorder">
            <Label Foreground="#FFDE1C1C" Background="AliceBlue" Padding="1" Margin="3" Opacity="0.9" x:Name="PrototypeLabel">ABCD</Label>
        </Border>
        <Border x:Name="PrototypeLabelBorderInActualBank" Style="{StaticResource CaptionBorderActiveBank}">
            <Label Foreground="#FFDE1C1C" Background="AliceBlue" Padding="1" Margin="3" Opacity="0.9" x:Name="PrototypeLabelInActiveBank">ABCD</Label>
        </Border>

    </WrapPanel>
</UserControl>
