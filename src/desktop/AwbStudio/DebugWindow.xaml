<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AwbStudio"
        xmlns:UserControls="clr-namespace:AwbStudio.UserControls" x:Class="AwbStudio.DebugWindow"
        mc:Ignorable="d"
        Title="AWB debugging output" Height="450" Width="800">
    <Window.Icon>
        <DrawingImage />
    </Window.Icon>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <TextBox x:Name="TextBoxDebugOutput"  Grid.Column="0" TextWrapping="Wrap" Text="TextBox" FontSize="12"/>
    </ScrollViewer>
</Window>
