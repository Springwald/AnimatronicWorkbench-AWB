<UserControl x:Class="AwbStudio.ProjectConfiguration.PropertyEditors.ServoConfigBonusEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AwbStudio.ProjectConfiguration.PropertyEditors"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">

    <StackPanel Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="MIN" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            <Label Grid.Column="1" Content="VALUE" HorizontalAlignment="Center"  VerticalAlignment="Top"/>
            <Label Grid.Column="2" Content="MAX" HorizontalAlignment="Right"  VerticalAlignment="Top"/>
        </Grid>
        <Slider  VerticalAlignment="Center"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <CheckBox Grid.Column="0" Content="Send changes to servo" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Grid.Column="1"  Content="read position" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </Grid>
    </StackPanel>
</UserControl>
