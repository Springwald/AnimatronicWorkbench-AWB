<UserControl x:Class="AwbStudio.ProjectConfiguration.PropertyEditors.ServoConfigBonusEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AwbStudio.ProjectConfiguration.PropertyEditors"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="2" Margin="0 0 0 5" Background="#FF333333"  >
        <StackPanel Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" x:Name="LabelMinValue" Content="MIN" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                <Label Grid.Column="1" x:Name="LabelValue" Content="VALUE" HorizontalAlignment="Center"  VerticalAlignment="Top"/>
                <Label Grid.Column="2" x:Name="LabelMaxValue" Content="MAX" HorizontalAlignment="Right"  VerticalAlignment="Top"/>
            </Grid>
            <Slider x:Name="SliderServoPosition" VerticalAlignment="Center" ValueChanged="SliderServoPosition_ValueChanged"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0" x:Name="CheckboxSendChangesToServo" Content="Send changes to servo" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Button Grid.Column="1" x:Name="ButtonReadPosition"  Content="read position" HorizontalAlignment="Right" VerticalAlignment="Center" Click="ButtonReadPosition_Click" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
